<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.CalculatorPage">

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"></ColumnDefinition>
      <ColumnDefinition Width="*"></ColumnDefinition>
      <ColumnDefinition Width="*"></ColumnDefinition>
      <ColumnDefinition Width="*"></ColumnDefinition>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"></RowDefinition>
      <RowDefinition Height="*"></RowDefinition>
      <RowDefinition Height="*"></RowDefinition>
      <RowDefinition Height="*"></RowDefinition>
      <RowDefinition Height="*"></RowDefinition>
    </Grid.RowDefinitions>
    <Label x:Name="DigitLabel" Grid.Column="0" Grid.Row="0" HorizontalOptions="Fill" VerticalOptions="Fill" BackgroundColor="Fuchsia"></Label>
    <Button x:Name="ButOne" Grid.Column="0" Grid.Row="3"></Button>
    <Button x:Name="ButTwo" Grid.Column="1" Grid.Row="3"></Button>
    <Button x:Name="ButThree" Grid.Column="2" Grid.Row="3"></Button>
    <Button x:Name="ButFour" Grid.Column="0" Grid.Row="2"></Button>
    <Button x:Name="ButFive" Grid.Column="1" Grid.Row="2"></Button>
    <Button x:Name="ButSix" Grid.Column="2" Grid.Row="2"></Button>
    <Button x:Name="ButSeven" Grid.Column="0" Grid.Row="1"></Button>
    <Button x:Name="ButEight" Grid.Column="1" Grid.Row="1"></Button>
    <Button x:Name="ButNine" Grid.Column="2" Grid.Row="1"></Button>
    <Button x:Name="ButZero" Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2"></Button>
    <Button x:Name="ButPoint" Grid.Column="2" Grid.Row="4"></Button>
    <Button x:Name="ButAdd" Grid.Column="3" Grid.Row="3"></Button>
    <Button x:Name="ButSubstract" Grid.Column="3" Grid.Row="2"></Button>
    <Button x:Name="ButMultiply" Grid.Column="3" Grid.Row="1"></Button>
    <Button x:Name="ButResult" Grid.Column="3" Grid.Row="4"></Button>
  </Grid>
</ContentPage>