<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipCalculator.MainPage"
             BackgroundColor="White"
             Title="Tip Calculator">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness"
                iOS="20, 40, 20, 20"
                Android="20, 20, 20, 20"
                WinPhone="20, 20, 20, 20" />
  </ContentPage.Padding>
  <ContentPage.Content>
    <StackLayout VerticalOptions="FillAndExpand"
                 Orientation="Vertical"
                 Spacing="20">
      <Entry></Entry>
      <Button></Button>
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition></ColumnDefinition>
          <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition></RowDefinition>
          <RowDefinition></RowDefinition>
          <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
      </Grid>
      <Label Grid.Column="0" Grid.Row="0" x:Name="PercentLabel" Text="Tip Percentage" TextColor="Black" FontSize="20"></Label>
      <Label Grid.Column="0" Grid.Row="1" x:Name="TipAmountLabel" Text="Tip Amount" TextColor="Black" FontSize="20"></Label>
      <Label Grid.Column="0" Grid.Row="2" x:Name="TotalAmountLabel" Text="Total Amount" TextColor="Lime" FontSize="20"></Label>
      <Label Grid.Column="1" Grid.Row="0" x:Name="PercentValue" Text="10%" TextColor="Black" FontSize="20"></Label>
      <Label Grid.Column="1" Grid.Row="1" x:Name="TipAmountValue" Text="$5" TextColor="Black" FontSize="20"></Label>
      <Label Grid.Column="1" Grid.Row="2" x:Name="TotalAmountValue" Text="$15" TextColor="Lime" FontSize="20"></Label>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>